---
import bgLight from './../../assets/images/kraft-paper-01.webp'
import { getImage } from 'astro:assets'
import video from '../../../public/video/6769802-uhd_3840_2160_24fps.mp4'

const mobileImage = await getImage({ src: bgLight, width: 720, format: 'webp', quality: 80 });
const tabletImage = await getImage({ src: bgLight, width: 1200, format: 'webp', quality: 80 });
const desktopImage = await getImage({ src: bgLight, width: 1920, format: 'webp', quality: 80 });
const largeImage = await getImage({ src: bgLight, width: 2560, format: 'webp', quality: 80 });
---


<div class="wrapper-journey" id="journey">
  <h3 class="headline">From Seed to Sip:<br>The Earthy Origin Journey</h3>
  <div class="video-wrapper">
    <video src={video} muted autoplay loop></video>
  </div>
  <p class="video-description">Dive into the heart of where our passion begins. Watch how our dedication to quality and ethical cultivation brings the finest coffee beans to life.</p>

</div>



<style define:vars={{
  mobileUrl: `url(${mobileImage.src})`,
  tabletUrl: `url(${tabletImage.src})`,
  desktopUrl: `url(${desktopImage.src})`,
  largeUrl: `url(${largeImage.src})`
}}>

.wrapper-journey {
  display: grid;
  grid-template-columns: 1fr minmax(300px, 1000px) 1fr;
  grid-template-rows: 80px 1fr auto 1fr;
  justify-items: center;
  background-color: black;
  background-image: var(--mobileUrl);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  width: 100%;
  height: 100vh;
  height: 100dvh;
}

.headline{
  max-width: 30ch;
  text-align: center;
  margin-bottom: var(--gap-m);
  color: var(--clr-text-light);
  grid-column: 2/3;
  grid-row: 2/3;
  align-self: end;
}

.video-wrapper {
  grid-column: 2/3;
  grid-row: 3/4;
}

.video-description {
  color: var(--clr-text-light);
  margin-top: 2rem;
  grid-column: 2/3;
  grid-row: 4/5;
  text-align: center;
}



@media (min-width: 721px) {
  .wrapper-journey {
    background-image: var(--tabletUrl);
  }
}

@media (min-width: 1201px) {
  .wrapper-journey {
    background-image: var(--desktopUrl);
  }
}

@media (min-width: 1921px) {
  .wrapper-journey {
    background-image: var(--largeUrl);
  }
}

@media (hover: hover) and (pointer: fine) {
  .wrapper-journey {
    scroll-snap-align: start;
  }
}
</style>
